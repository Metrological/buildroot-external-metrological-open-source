config BR2_PACKAGE_WPEBACKEND_RDK
	bool "wpebackend-rdk"
    select BR2_PACKAGE_WAYLAND_EGL_BNXS if BR2_PACKAGE_HAS_NEXUS && BR2_PACKAGE_WESTEROS
	help
	  RDK-specific implementations of the WPEBackend interfaces.

if BR2_PACKAGE_WPEBACKEND_RDK

config BR2_PACKAGE_WPEBACKEND_RDK_ADDITIONAL_PATCHES
    bool "wpebackend-rdk additional patches"
    default n

config BR2_PACKAGE_WPEBACKEND_RDK_INPUT_VIRTUALKBD
	bool
	default y if !BR2_PACKAGE_WPEBACKEND_RDK_BACK_WPEFRAMEWORK && \
		(BR2_PACKAGE_GLUELOGIC_VIRTUAL_KEYBOARD || BR2_PACKAGE_WPEFRAMEWORK_VIRTUALINPUT)

choice
    prompt Backend

config BR2_PACKAGE_WPEBACKEND_RDK_BACK_BCM_NEXUS
	bool "bcm-nexus"
	depends on BR2_PACKAGE_HAS_NEXUS
	depends on !BR2_PACKAGE_BCM_WESTON
	select BR2_PACKAGE_LIBINPUT if !BR2_PACKAGE_WPEFRAMEWORK_VIRTUALINPUT

config BR2_PACKAGE_WPEBACKEND_RDK_BACK_BCM_NEXUS_WAYLAND
	bool "bcm-nexus-wayland"
	depends on BR2_PACKAGE_HAS_NEXUS
	depends on BR2_PACKAGE_BCM_WESTON

config BR2_PACKAGE_WPEBACKEND_RDK_BACK_BCM_RPI
	bool "bcm-rpi"
	depends on BR2_PACKAGE_RPI_USERLAND
	depends on !BR2_PACKAGE_HAS_NEXUS
	select BR2_PACKAGE_LIBINPUT if !BR2_PACKAGE_WPEFRAMEWORK_VIRTUALINPUT

config BR2_PACKAGE_WPEBACKEND_RDK_BACK_INTEL_CE
	bool "intel-ce"
	depends on BR2_PACKAGE_HORIZON_SDK || BR2_PACKAGE_INTELCE_SDK

config BR2_PACKAGE_WPEBACKEND_RDK_BACK_WAYLAND_EGL
	bool "wayland-egl"
	depends on BR2_PACKAGE_KYLIN_GRAPHICS

config BR2_PACKAGE_WPEBACKEND_RDK_BACK_WESTEROS
	bool "westeros"
	depends on !BR2_PACKAGE_WPEFRAMEWORK_COMPOSITORCLIENT
	depends on BR2_PACKAGE_WESTEROS

config BR2_PACKAGE_WPEBACKEND_RDK_BACK_WPEFRAMEWORK
	bool "wpeframework"
	depends on BR2_PACKAGE_WPEFRAMEWORK_COMPOSITORCLIENT

endchoice

endif
