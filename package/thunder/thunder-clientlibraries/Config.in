config BR2_PACKAGE_THUNDER_CLIENTLIBRARIES
    bool
    help
        Collection of libraries to make life easier intergrating thunder
        in external componenets.

comment "External extensions"

config BR2_PACKAGE_THUNDER_CDM
    select BR2_PACKAGE_THUNDER_CLIENTLIBRARIES
    bool "ContentDecryptionModule"
    help
      CDM client support compatible with OpenCDM

config BR2_PACKAGE_THUNDER_COMPOSITORCLIENT
    select BR2_PACKAGE_THUNDER_CLIENTLIBRARIES
    bool "CompositorClient"
    default y
    help
      A graphical/input abstraction. This library is included in micro services that requires user
          interaction (Graphics/input). The implementation hides all the compositor specific details.
      allows for relaying keys to plugins

#"GstreamerClient (deprecated)"
config BR2_PACKAGE_THUNDER_GSTREAMERCLIENT
    select BR2_PACKAGE_THUNDER_CLIENTLIBRARIES
    bool 
    default n
    help
        Gstreamer client provides custom APIs to manipulate underneath stream sinks which will be linked with created pipeline.
        This implementation will vary based on custom platforms and sink backends.

config BR2_PACKAGE_THUNDER_DISPLAYINFO
    select BR2_PACKAGE_THUNDER_CLIENTLIBRARIES
    bool "DisplayInfo"
    default y
    help
        A helpful C-interface to easily get information from the DisplayInfo plugin.

config BR2_PACKAGE_THUNDER_CRYPTOGRAPHY
#    select BR2_PACKAGE_THUNDER_CLIENTLIBRARIES
    bool "Cryptography"
    default n
    help
        Abstraction on generic cryptography functionality.

    if BR2_PACKAGE_THUNDER_CRYPTOGRAPHY
    choice BR2_PACKAGE_THUNDER_CRYPTOGRAPHY_BACKEND
        prompt "backend"
        default BR2_PACKAGE_THUNDER_CRYPTOGRAPHY_BACKEND_OPENSSL
        help
            Choose an crypography backend

        config BR2_PACKAGE_THUNDER_CRYPTOGRAPHY_BACKEND_THUNDER
            bool "Thunder"
            help
                Use Thunder as cryptography backend.

        config BR2_PACKAGE_THUNDER_CRYPTOGRAPHY_BACKEND_PROVISIONING
            bool "Provisioning"
            select BR2_PACKAGE_THUNDER_PROVISIONPROXY
            help
                Use provisioning/OpenSSL as cryptography backend.

        config BR2_PACKAGE_THUNDER_CRYPTOGRAPHY_BACKEND_OPENSSL
            bool "OpenSSL"
            select BR2_PACKAGE_OPENSSL
            help
                Use OpenSSL as cryptography backend.

        config BR2_PACKAGE_THUNDER_CRYPTOGRAPHY_BACKEND_NEXUS
            bool "Nexus"
            depends on BR2_PACKAGE_HAS_NEXUS
            help
                Use Nexus as cryptography backend.
    endchoice
    endif

config BR2_PACKAGE_THUNDER_SECURITYAGENT_ACCESSOR
    bool "SecurityAgent"
    select BR2_PACKAGE_THUNDER_CLIENTLIBRARIES
    help
        Allows external access to the Security Agent, through a C interface.

config BR2_PACKAGE_THUNDER_VIRTUALINPUT
    bool "VirtualInput"
    select BR2_PACKAGE_THUNDER_CLIENTLIBRARIES
    help
      If the dynamic uinput system can not be used for security reasons, this
      allows for relaying keys to plugins

config BR2_PACKAGE_THUNDER_PROVISIONPROXY
    bool "ProvisionProxy"
    select BR2_PACKAGE_THUNDER_CLIENTLIBRARIES
    select BR2_PACKAGE_LIBPROVISION
    help
      Allows provisioning of modules from the cloud.
