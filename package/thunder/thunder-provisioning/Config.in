menuconfig BR2_PACKAGE_THUNDER_PROVISIONING
    bool "Provisioning"
    depends on BR2_PACKAGE_THUNDER
    select BR2_PACKAGE_THUNDER_SECURE_SOCKET
    select BR2_PACKAGE_THUNDER_PROVISIONPROXY
    help
       WPE Platform Provisioning plugin

comment "Provisioning is needs thunder"
    depends on !BR2_PACKAGE_THUNDER

if BR2_PACKAGE_THUNDER_PROVISIONING
menuconfig BR2_PACKAGE_THUNDER_PROVISIONING_CLOUD
    bool "Cloud provisioning"
    default n

if BR2_PACKAGE_THUNDER_PROVISIONING_CLOUD
    config BR2_PACKAGE_THUNDER_PROVISIONING_PROVISIONING_CACHE_PERIODE
        int "cache period (s)"
        default 2592000
        help
            Define the cache period in seconds.
            Set to 0 to disable.

    config BR2_PACKAGE_THUNDER_PROVISIONING_URI
        string "provisioning URI"
        default "provisioning-sdk.metrological.com:80"

    config BR2_PACKAGE_THUNDER_PROVISIONING_OPERATOR
        string "operator"
        default "metrological"

    config BR2_PACKAGE_THUNDER_PROVISIONING_EXPORTS
        string "exports"
        default ""
        help
            Define a string that contains the labels to be exported from the cloud to a sink.
            format: (sink:label:file:path:always;label:file:path:always) where 'always' is overwrite if the file exists
            "CloudToFile:label1:label1.json:/absolute/path:true;CloudToFile:label2::relative/to/presistent:false"
endif

menuconfig BR2_PACKAGE_THUNDER_PROVISIONING_FILES
    bool "File provisioning"
    default n

if BR2_PACKAGE_THUNDER_PROVISIONING_FILES
    config BR2_PACKAGE_THUNDER_PROVISIONING_VAULT_LOCATION
        string "vault"
        default "vault"
        help
            Define where the vault json files can be found. The
            location will be relative to the plugins persitent
            path.

            Leave empty to skip the json config entry.
endif

menuconfig BR2_PACKAGE_THUNDER_PROVISIONING_WIDEVINE
    bool "Widevine provisioning"
    default n

if BR2_PACKAGE_THUNDER_PROVISIONING_WIDEVINE
choice BR2_PACKAGE_THUNDER_PROVISIONING_WIDEVINE_LOG_LEVEL
    prompt "Debug Level"
    default BR2_PACKAGE_THUNDER_PROVISIONING_WIDEVINE_LOG_LEVEL_-1
config BR2_PACKAGE_THUNDER_PROVISIONING_WIDEVINE_LOG_LEVEL_-1
    bool "Silent"
config BR2_PACKAGE_THUNDER_PROVISIONING_WIDEVINE_LOG_LEVEL_0
    bool "Error"
config BR2_PACKAGE_THUNDER_PROVISIONING_WIDEVINE_LOG_LEVEL_1
    bool "Warnings"
config BR2_PACKAGE_THUNDER_PROVISIONING_WIDEVINE_LOG_LEVEL_2
    bool "Info"
config BR2_PACKAGE_THUNDER_PROVISIONING_WIDEVINE_LOG_LEVEL_3
    bool "Debug"
config BR2_PACKAGE_THUNDER_PROVISIONING_WIDEVINE_LOG_LEVEL_4
    bool "Verbose"
endchoice
endif

endif # BR2_PACKAGE_THUNDER_PROVISIONING

menuconfig BR2_PACKAGE_THUNDER_PROVISIONING_BLOBWRITER
    depends on BR2_PACKAGE_THUNDER_PROVISIONING
    bool "BlobWriter"
    default n
    help
        Plugin to transfor Provisioning Blobs into entries.
            in a TEE vault.

config BR2_PACKAGE_THUNDER_PROVISIONING_BLOBWRITER_BLOBS
    depends on BR2_PACKAGE_THUNDER_PROVISIONING_BLOBWRITER
    string "blobs"
    default ""
    help
        Define a string that contains the blobs to be written to files.
        format: (label:file:always;label:file:always) where 'always' is dump/overwrite file
        "labelx:/mnt/flash/labelx.bin:true;labely:/mnt/flash/labely.bin:false"

comment "BlobWriter is dependent on the provisioning plugin"
    depends on !BR2_PACKAGE_THUNDER_PROVISIONING
