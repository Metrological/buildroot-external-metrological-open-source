menuconfig BR2_PACKAGE_THUNDER_NETFLIX
    bool "Netflix"
    depends on BR2_PACKAGE_NETFLIX_LIB || BR2_PACKAGE_NETFLIX5_LIB || BR2_PACKAGE_NETFLIX52_LIB
    help
        WPE Platform Netflix plugin

if BR2_PACKAGE_THUNDER_NETFLIX

config BR2_PACKAGE_THUNDER_PLUGIN_NETFLIX_AUTOSTART
    depends on BR2_PACKAGE_THUNDER_NETFLIX
    bool "autostart"
    default n
menu "DPI options"
  config BR2_PACKAGE_THUNDER_PLUGIN_NETFLIX_MODEL
      depends on BR2_PACKAGE_THUNDER_NETFLIX
      string "model"
      default "Metrological Reference DPI Implementation"

  config BR2_PACKAGE_THUNDER_PLUGIN_NETFLIX_FRIENDLY_NAME
      depends on BR2_PACKAGE_THUNDER_NETFLIX
      string "friendly name"
      default "Metrological Netflix Implementation"

  config BR2_PACKAGE_THUNDER_PLUGIN_NETFLIX_VERSION_POSTFIX
      depends on BR2_PACKAGE_THUNDER_NETFLIX
      string "version postfix"
      default ""

  config BR2_PACKAGE_THUNDER_PLUGIN_NETFLIX_VIDEO_BUFFER_SIZE
      string "video buffer"
      default "193986560"
      help
          Video buffer capacity in bytes

  config BR2_PACKAGE_THUNDER_PLUGIN_NETFLIX_AUDIO_BUFFER_SIZE
      string "audio buffer"
      default "2621440"
      help
          Audio buffer capacity in bytes

  config BR2_PACKAGE_THUNDER_PLUGIN_NETFLIX_DISK_CACHE_SIZE
      string "disk cache"
      default "31457280"
      help
          Disk cache capacity in bytes

  config BR2_PACKAGE_THUNDER_PLUGIN_NETFLIX_SURFACE_CACHE_SIZE
      string "surface cache"
      default "36700160"
      help
          Surface cache capacity in bytes

  config BR2_PACKAGE_THUNDER_PLUGIN_NETFLIX_APPBOOTKEY
      depends on BR2_PACKAGE_THUNDER_NETFLIX
      string "appbootkey"
      help
          "Define a custom appbootkey, if left empty the built in key from Netflix will be used"

  menu "Audio codecs"

  config BR2_PACKAGE_THUNDER_PLUGIN_NETFLIX_DDP2
  	bool "DDP 2.0"
  	help
  	  Enable DDP 2.0

  config BR2_PACKAGE_THUNDER_PLUGIN_NETFLIX_DDP5_1
  	bool "DDP 5.1"
  	help
  	  Enable DDP 5.1

  config BR2_PACKAGE_THUNDER_PLUGIN_NETFLIX_DOLBY_ATMOS
  	bool "Dolby Atmos"
  	help
  	  Enable Dolby Atmos support

  endmenu

  menu "Video codecs"

  config BR2_PACKAGE_THUNDER_PLUGIN_VIDEO_AVC_HIGH
  	bool "avc-high"
  	help
  	  Enable AVC High support

  config BR2_PACKAGE_THUNDER_PLUGIN_NETFLIX_HDR10
  	bool "HDR10"
  	help
  	  Enable HDR10 support

  config BR2_PACKAGE_THUNDER_PLUGIN_NETFLIX_DOLBY_VISION
  	bool "Dolby Vision"
  	help
  	  Enable Dolby Vision support

  config BR2_PACKAGE_THUNDER_PLUGIN_NETFLIX_HEVC
  	bool "HEVC"
  	help
  	  Enable HEVC support

  config BR2_PACKAGE_THUNDER_PLUGIN_NETFLIX_VP9_P0
  	bool "VP9 profile 0"
  	help
  	  Enable VP9 profile 0 support

  config BR2_PACKAGE_THUNDER_PLUGIN_NETFLIX_VP9_P2
  	bool "VP9 profile 2"
  	help
  	  Enable VP9 profile 2 support

  config BR2_PACKAGE_THUNDER_PLUGIN_NETFLIX_VP9_HDR
  	bool "VP9 HDR"
  	help
  	  Enable VP9 HDR support

  endmenu

  config BR2_PACKAGE_THUNDER_PLUGIN_NETFLIX_DEFAULT_LAUGUAGE
  	string "Default lauguage"
  	default "en"
  	help
  	  define the default language
endmenu

config BR2_PACKAGE_THUNDER_PLUGIN_NETFLIX_SUSPEND_TIMEOUT
    depends on BR2_PACKAGE_THUNDER_NETFLIX
    int "suspend timeout"
    range 0 300000
    default 5000
    help
        Suspend timeout in milliseconds. If timeout is exceeded, deactivate application.
        min. 0 millisecond
        max. 300000 milliseconds

config BR2_PACKAGE_THUNDER_PLUGIN_NETFLIX_RESUME_TIMEOUT
    depends on BR2_PACKAGE_THUNDER_NETFLIX
    int "resume timeout"
    range 0 300000
    default 30000
    help
        Resume timeout in milliseconds. If timeout is exceeded, deactivate application.
        min. 0 millisecond
        max. 300000 milliseconds

config BR2_PACKAGE_THUNDER_PLUGIN_NETFLIX_FULLHD
    depends on BR2_PACKAGE_THUNDER_NETFLIX
    bool "fullhd"
    default n

config BR2_PACKAGE_THUNDER_PLUGIN_NETFLIX_HIGHRESUI
    depends on BR2_PACKAGE_THUNDER_NETFLIX
    bool "high resolution (1080p) UI"
    default n

config BR2_PACKAGE_THUNDER_PLUGIN_NETFLIX_KEY_REPEAT_DELAY
    depends on BR2_PACKAGE_THUNDER_NETFLIX
    int "key repeat delay"
    default 1000
    help
        Key repeat delay in milliseconds.

config BR2_PACKAGE_THUNDER_PLUGIN_NETFLIX_APPBOOTKEY
    depends on BR2_PACKAGE_THUNDER_NETFLIX
    string "appbootkey"
    help
        "Define a custom appbootkey, if left empty the built in key from Netflix will be used. Leave empty to use the default key"

config BR2_PACKAGE_THUNDER_PLUGIN_NETFLIX_DEVICE_KEYS
    depends on BR2_PACKAGE_THUNDER_NETFLIX
    string "device keys"
    help 
        "Define the location where the hareware bound ESN and encryption keys can be found. Leave empty to disable"
endif

comment "netflix is dependent on the netflix package compiled as library"
    depends on !BR2_PACKAGE_NETFLIX_LIB && !BR2_PACKAGE_NETFLIX5_LIB && !BR2_PACKAGE_NETFLIX52_LIB
