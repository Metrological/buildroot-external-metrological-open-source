menuconfig BR2_PACKAGE_THUNDER_AVS
  bool "AVS"
  select BR2_PACKAGE_AVS_DEVICE_SDK
  select BR2_PACKAGE_AVS_DEVICE_SDK_BUILD_GST_MEDIA_PLAYER
  help
    Thunder Alexa Voice Service Plugin

if BR2_PACKAGE_THUNDER_AVS
  config BR2_PACKAGE_THUNDER_AVS_PLUGIN_NAME
    string "Plugin Name"
    default "AVS"
    help
      The plugin name

  config BR2_PACKAGE_THUNDER_AVS_AUTOSTART
    bool "Autostart"
    help
      Autostart the AVS plugin

  choice BR2_PACKAGE_THUNDER_AVS_PLATFORM
    bool "Platform"
    default BR2_PACKAGE_THUNDER_AVS_PLATFORM_RPI3
      config BR2_PACKAGE_THUNDER_AVS_PLATFORM_RPI3
        bool "rpi3"
      config BR2_PACKAGE_THUNDER_AVS_PLATFORM_CUSTOM
        bool "Custom"

  endchoice

  if BR2_PACKAGE_THUNDER_AVS_PLATFORM_CUSTOM
    config BR2_PACKAGE_THUNDER_AVS_PLATFORM_CUSTOM_VALUE
      string "Custom platform"
      help
        Name of the custom platform

  endif

  config BR2_PACKAGE_THUNDER_AVS_DATA_PATH
    string "Data path"
    default BR2_PACKAGE_THUNDER_DATA_PATH
    help
      Path where AVS read only data will be stored

  config BR2_PACKAGE_THUNDER_AVS_CUSTOM_ALEXA_CLIENT_CONFIG
    string "Custom Alexa Client Config"
    help
      Custom path to configuration file for the Alexa Client

  config BR2_PACKAGE_THUNDER_AVS_CUSTOM_SMART_SCREEN_CONFIG
    string "Custom Smart Screen Config"
    help
      Custom path to configuration file for the Smart Screen

  choice BR2_PACKAGE_THUNDER_AVS_LOG_LEVEL
    bool "Log level"
    default BR2_PACKAGE_THUNDER_AVS_LOG_LEVEL_CRITICAL
      config BR2_PACKAGE_THUNDER_AVS_LOG_LEVEL_NONE
        bool "None"
      config BR2_PACKAGE_THUNDER_AVS_LOG_LEVEL_CRITICAL
        bool "Critical"
      config BR2_PACKAGE_THUNDER_AVS_LOG_LEVEL_ERROR
        bool "Error"
      config BR2_PACKAGE_THUNDER_AVS_LOG_LEVEL_WARN
        bool "Warning"
      config BR2_PACKAGE_THUNDER_AVS_LOG_LEVEL_DEBUG0
        bool "Debug0"
      config BR2_PACKAGE_THUNDER_AVS_LOG_LEVEL_DEBUG9
        bool "Debug9"
  endchoice

  config BR2_PACKAGE_THUNDER_AVS_ENABLE_PORTAUDIO_SUPPORT
    bool "Enable Portaudio support"
    select BR2_PACKAGE_PORTAUDIO
    default n
    help
      Compile in support for the Portaudio input

  choice BR2_PACKAGE_THUNDER_AVS_AUDIOSOURCE
    bool "Audiosource"
    default BR2_PACKAGE_THUNDER_AVS_AUDIOSOURCE_PORTAUDIO
      config BR2_PACKAGE_THUNDER_AVS_AUDIOSOURCE_PORTAUDIO
        bool "Portaudio"
      config BR2_PACKAGE_THUNDER_AVS_AUDIOSOURCE_BLRC
        bool "BluetoothRemoteControl"
      config BR2_PACKAGE_THUNDER_AVS_AUDIOSOURCE_CUSTOM
        bool "Custom"
  endchoice

  if BR2_PACKAGE_THUNDER_AVS_AUDIOSOURCE_CUSTOM
    config BR2_PACKAGE_THUNDER_AVS_AUDIOSOURCE_CUSTOM_VALUE
      string "Custom Audiosource value"
  endif

  config BR2_PACKAGE_THUNDER_AVS_ENABLE_SMART_SCREEN_SUPPORT
    bool "Enable Smart Screen Support"
    select BR2_PACKAGE_ALEXA_SMART_SCREEN_SDK
    default y
    help
      Compile in the Smart Screen support

  if BR2_PACKAGE_THUNDER_AVS_ENABLE_SMART_SCREEN_SUPPORT
    config BR2_PACKAGE_THUNDER_AVS_ENABLE_SMART_SCREEN
      bool "Enable Smart Screen in runtime"
      default n
      help
        Enables the Smart Screen in the runtime
  endif

  config BR2_PACKAGE_THUNDER_AVS_ENABLE_KWD_SUPPORT
    bool "Enable KWD Support"
    select BR2_PACKAGE_ALEXA_PRYON_KWD
    default n
    help
      Compile in the Keyword Detection engine support

  if BR2_PACKAGE_THUNDER_AVS_ENABLE_KWD_SUPPORT
    config BR2_PACKAGE_THUNDER_AVS_ENABLE_KWD
      bool "Enable KWD in runtime"
      default n
      help
        Enables the Keyword Detection engine in the runtime

    config BR2_PACKAGE_THUNDER_AVS_CUSTOM_KWD_MODELS_PATH
      string "Custom KWD models path"
      help
        Custom path to the models directory for KWD
  endif

endif
